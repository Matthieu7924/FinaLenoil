@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "List Roles";
}

<h1>All Roles</h1>

<a asp-controller="Administration" asp-action="CreateRole" class="btn btn-primary">Create New Role</a>

@if(Model.Any())
{
    foreach (IdentityRole role in Model)
    {
        <div class="card">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <!-- EDIT ROLE LINK-->
                <!-- DELETE ROLE LINK-->
            </div>
        </div>
    }
}
