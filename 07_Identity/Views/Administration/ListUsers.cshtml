@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "List Users";
}

<h1>All Users</h1>

<a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register new User</a>

@if(Model.Any())
{
    foreach (ApplicationUser user in Model)
    {
        <div class="card">
            <div class="card-header">
                Role Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Update</a>

                <form method="post" asp-controller="Administration" asp-action="DeleteUser" asp-route-id=@user.Id>
                    <button type="submit" onclick="return confirm('Are y sure you want to delete user : @user.UserName')" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
}
